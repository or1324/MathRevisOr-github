<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="0dp"
    android:layout_height="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RadioGroup
        android:checkedButton="@+id/all_vs_all"
        android:id="@+id/or_cool_switch"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/or_cool_switch_outline"
        android:orientation="horizontal">

        <RadioButton
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/all_vs_all"
            android:background="@drawable/or_cool_switch_toggled"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="All vs All"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <RadioButton
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/groups"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/or_cool_switch_toggled"
            android:button="@null"
            android:gravity="center"
            android:text="Groups"
            android:textSize="18dp"
            android:textColor="@color/black" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>